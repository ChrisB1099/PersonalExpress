<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Budget Tracker</title>
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
 
  <div class="container">
  <h1>Budget Tracker</h1>
  <h2>Income and Expenses Summary</h2>
</div>

<div class="container2">
  <h3>Entries</h3>
  <ul class="entries">
  <% for(var i=0; i<entries.length; i++) {%>   <!--name that we chose when we passed it into ejs, Rappers is the collection name--> 
    <li class="message">
      <span><%= entries[i].amount %></span>
      <span><%= entries[i].category %></span>
      <span><%= entries[i].date  %></span>
      <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span> -->
      <span><i class="fa fa-edit" aria-hidden="true"></i></span> 
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>
</div>
<div  class="container3">
  <h2>Add Income or Expense</h2>
<form action="/athletes" method="POST">
  <input type="number" placeholder="amount" name="amount" required>
  <select name="category" required>
    <option value="fastFood">Fast Food</option>
    <option value="nights"> nights</option>
    <option value="SEPTA">SEPTA</option>
    <option value="starbucks">Starbucks</option>
    <option value="snacks">snacks</option>
    <option value="other">Other</option>
    
  </select>
  <input type="date" name="date" required>
  <button type="submit">Add Entry</button>
</form>
</div>
  
  <script src="main.js"></script>

</body>
</html>
